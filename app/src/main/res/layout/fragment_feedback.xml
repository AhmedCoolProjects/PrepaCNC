<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.feedback.FeedbackFragment">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/shape_feedback"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contentDescription="@string/desc"
            android:src="@drawable/ic_logo_vector" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/owner_email" />
    </LinearLayout>

    <EditText
        android:id="@+id/feedback_ed_id"
        android:layout_width="345dp"
        android:layout_height="147dp"
        android:layout_marginTop="16dp"
        android:autofillHints=""
        android:background="@drawable/feedback_et"
        android:ems="10"
        android:gravity="clip_vertical"
        android:hint="@string/hint_feedback"
        android:inputType="textMultiLine|textPersonName"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <LinearLayout
        android:id="@+id/send_feedback_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/send_feedback"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/feedback_ed_id"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/feedback_ed_id">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="59dp"
            android:layout_height="58dp"
            android:contentDescription="@string/desc"
            android:src="@drawable/ic_telegram_icon" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>